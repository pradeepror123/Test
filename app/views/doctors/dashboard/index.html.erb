<%= link_to "My Appointments", "/doctors/my_appointments" %>
<div class="page-header">
  <h4>Doctors</h4>
</div>
<table class="table table-wuxia">
  <thead>
    <tr>
      <th>Name</th>
      <th>Username</th>
      <th>Address</th>
      <th>College</th>
      <th>Years in practice</th>
    </tr>
  </thead>
  <% @doctors.each do |doctor| %>
    <tr>
      <td>
        <%= doctor.name %>
      </td>
      <td>
        <%= doctor.username %>
      </td>
      <td>
        <%= doctor.address %>
      </td>
      <td>
        <%= doctor.profile && doctor.profile.school %>
      </td>
      <td>
        <%= doctor.profile && doctor.profile.years_in_practice %>
      </td>
      <td>
        <%= link_to "Edit", "/doctors/doctor/#{doctor.id}" %>
        <%= link_to "Destroy", "#" %>
      </td>
    </tr>
  <% end %>
</table>
<br/>
<%= link_to 'New Doctor', "/doctors/new_doctor", :class => "btn btn-small" %>
